    MDRaisedButton:
        # size_hint:(0.25,0.35)
        text:"Retooour"
        on_release: app.root.current="contact_screen"
    BoxLayout:
        size_hint:(0.75,0.85)
        spacing:25
        orientation:"vertical"
        pos_hint:{'center_x':0.5,'center_y':0.5}
        # # size_hint:(0.5,0.6)
        
        OneLineAvatarListItem:
            id:destinator
            text: "Michel"
            ImageLeftWidget:
                id:destinator_image
                source: "../Assets/m.jpg"
        BoxLayout:
            orientation:"vertical"
            # ScrollView:
            #     MDList:
            #         id:message_list
            #         # OneLineListItem:
            #         #     text:"message recu"
            #         ThreeLineListItem:
            #             text:"Victoria"
            #             secondary_text:"18h32"
            #             tertiary_text:"Coucou, ca va pd"
            #         ThreeLineListItem:
            #             text:"Nathan"
            #             secondary_text:"18h35"
            #             tertiary_text:"Coucou fdp"
            MDLabel:
                size_hint:(0.9,1)

        BoxLayout:
            size_hint:(1,0.25)
            orientation:"horizontal"
            spacing:10
            MDTextField:
                size_hint:(0.9,1)
                id:message
                multiline:"False"
            MDIconButton:
                id:send_btn
                on_release:root.send_message()
                size_hint:(0.1,1)
                icon:"send-circle-outline"


            
            


