MyScreenManager:
    LoginScreen:
    ContactScreen:
    SendScreen:

<LoginScreen>:
    name:"login_screen"
    BoxLayout:
        orientation:"vertical"
        size_hint:(0.5,0.6)
        pos_hint:{'center_x':0.5,'center_y':0.5}
        # Image:
        #     source:"logo.jfif"
        MDIconButton:
            pos_hint:{'center_x':0.5,'center_y':0.5}
            size_hint:(1,0.5)
            icon:"qqchat"
        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,0.4)
            BoxLayout:
                orientation:"vertical"
                # MDLabel:
                #     size_hint:(1,0.3)
                #     text:"Entrer votre nom"
                #     bold:True
                #     font_style:"H5"
                MDTextField:
                    id:name
                    hint_text:"Name"
                    multiline:"False"
                    icon_right:"account"
        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,0.4)

            BoxLayout:
                orientation:"vertical"
                # MDLabel:
                #     size_hint:(1,0.3)
                #     text:"Mot de passe"
                    
                #     bold:True
                #     font_style:"H5"
                    
                MDTextField:
                    id:password
                    hint_text:"Password"
                    multiline:"False"
                    icon_right:"eye-off"
        BoxLayout:
            orientation:"horizontal"
            size_hint:(1,0.2)
            spacing:35
            # pos_hint:{'center_x':0.5,'center_y':0.5}
            MDRaisedButton:
                size_hint:(0.45,0.5)
                text:"Vérifier les données"
                on_release: root.login(name,password)                
            MDLabel:
                size_hint:(0.45,0.5)
                text:"Changer le theme" 
                # pos_hint:{'center_x':0.75,'center_y':1}   
            MDSwitch:
                size_hint:(0.1,0.5)
                widget_style:"android"
                on_active: root.switch_theme(*args)

<ContactScreen>:
    name:"contact_screen"
    BoxLayout:
        orientation:"vertical"
        size_hint:(0.5,0.8)
        pos_hint:{'center_x':0.5,'center_y':0.5}
        BoxLayout:
            size_hint:(1,0.15)
            orientation:"horizontal"
            spacing:25
            MDLabel:
                size_hint:(0.75,0.35)
                text:"Liste des contacts"
            MDRaisedButton:
                size_hint:(0.25,0.35)
                text:"Refresh"
                on_release: root.refresh_contacts()
        ScrollView:
            size_hint:(1,0.85)
            MDList:
                id:container
        


